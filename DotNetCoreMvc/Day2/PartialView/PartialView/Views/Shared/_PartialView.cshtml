@model List<Employee>


@foreach (var m in Model)
{
    if (m.IsPermanent == true)
    {
        <div class="row">
            <span class="col-md-4"><b>@m.Name - @m.Salary</b></span>
        </div> }
    else
    {
        <div class="row">
            <span class="col-md-4">@m.Name - @m.Salary</span>
        </div>}
}